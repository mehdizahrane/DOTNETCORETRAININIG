@{
    ViewData["Title"] = "Contact";
}

    <div class="row text-center" style="margin: 50px;">
        <h2>Leave a message :</h2>
        <form method="post" >
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Email:" />
            </div>
            <div class="form-group">
                <textarea  placeholder="Message:" rows="8"/></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="form-control button form-control btn btn-info" class="button fit"><i class="icon fa-paper-plane"></i>&nbsp; Send</button>
            </div>
        </form>
    </div>